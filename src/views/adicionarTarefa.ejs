<%- include('includes/head'); %>

    <link rel="stylesheet" href="./assets/css/styleAddTarefa.css">
</head>
<body>

    <nav>
        <h2 class="logo">TaskFlow</h2>

        <ul class="nav-list">
            <li><a href="/tarefa">Tarefas</a></li>
            <li><a href="#">Contato</a></li>
            <li><a href="#">Sobre</a></li>
            <li><a href="/logout" class="sair">Sair</a></li>
          </ul>
        
          <div class="mobile-menu">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
          </div>
    </nav>
    
    

    <main class="main">    
        <form class="tarefa" action="/adicionarTarefas/register" method="POST">
            <h1 class="titulo">Adicionar Tarefa</h1>

            <% if (success.length > 0) { %>
                <div class="row">
                    <div class="col my-3">
                        <div class="alert-success">
                            <% success.forEach(success => { %>
                                <%= success  %> <br>
                            <% }); %>
                        </div>
                    </div>
                </div>
                <% } %>

            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
           <input type="hidden"  name="id" value="<%=user._id  %>">
             <div class="box"> 
                <input type="text" id="titulo" name="titulo" required autocomplete="off" placeholder="Titulo:">
                <label id="labelTitulo" for="nome">Titulo:</label>
            </div>
            <div class="container">
                <div class="box"> 
                    <input type="text" id="tarefa" name="tarefa[0].tarefa" required autocomplete="off" placeholder="Tarefa:">
                    <label id="labelTitulo" for="nome">Tarefa:</label>
                </div>
            </div>
             
            <button type="button" id="addTarefaButton">+</button>
            <button type="submit" id="buttonSalvar">Salvar</button>
        </form>
    </main>
    
    
    <script src="/tarefaAdd.js"></script>
    <script src="/menu.js"></script>
    <!-- <script src="./assets/js/index.bundle.js"></script> -->
</body>
</html>