            </div>
            <div class="container">
                <div class="box"> 
                    <input type="text" id="tarefa" name="tarefa[0]" required autocomplete="off" placeholder="Tarefa:">
                    <label id="labelTitulo" for="nome">Tarefa:</label>
                </div>
            </div>
             
            <button type="button" id="addTarefaButton">+</button>
            <button type="submit" id="buttonSalvar">Salvar</button>
        </form>
    </main>
    
    
    <script src="/tarefaAdd.js"></script>
